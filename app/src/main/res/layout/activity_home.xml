<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="607dp"
        android:gravity="center"
        android:text="Tic Tac Toe"
        android:textColor="#F30045"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="469dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="114dp"
        android:orientation="vertical"
        android:background="#95FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="1. The game is played on a grid that's 3 squares by 3 squares."
            android:textColor="@color/black"
            android:paddingBottom="30sp"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. You are X, your friend (or the computer in this case) is O. Players take turns putting their marks in empty squares."
            android:textColor="@color/black"
            android:paddingBottom="30sp"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="3. The first player to get 3 of her marks in a row (up, down, across, or diagonally) is the winner."

            android:paddingBottom="30sp"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. When all 9 squares are full, the game is over. If no player has 3 marks in a row, the game ends in a tie."
            android:textColor="@color/black"
            android:paddingBottom="30sp"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/play"
        android:layout_width="239dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="#F30045"
        android:text="Play"
        android:textSize="20sp" />

</RelativeLayout>